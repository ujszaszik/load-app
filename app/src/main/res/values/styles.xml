<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- APP THEME -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:colorPrimaryDark">@color/teal_700</item>
    </style>

    <!-- ACTION BAR -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/teal_700</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.Text</item>
    </style>

    <style name="AppTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- TEXT VIEW -->
    <style name="DetailLabelTextView" parent="Widget.AppCompat.TextView">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailValueTextView" parent="Widget.AppCompat.TextView">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="RepoListRowNameText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/tiny_margin</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/highlighted_text_size</item>
    </style>

    <!-- BUTTON -->
    <style name="DefaultButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OkButton" parent="DefaultButton">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:text">@string/label_button_ok</item>
    </style>

    <style name="ListButton" parent="DefaultButton">
        <item name="android:backgroundTint">@color/teal_700</item>
        <item name="android:text">@string/label_button_list_all_repos</item>
    </style>

    <style name="BackToMainPageButton" parent="DefaultButton">
        <item name="android:layout_marginStart">@dimen/tiny_margin</item>
        <item name="android:layout_marginEnd">@dimen/tiny_margin</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:text">@string/label_button_back_to_main_page</item>
    </style>

    <!-- IMAGE VIEW -->
    <style name="FileStatusImageView">
        <item name="android:layout_marginLeft">@dimen/tiny_margin</item>
        <item name="android:foregroundGravity">center_vertical</item>
    </style>

    <!-- RADIO GROUP -->
    <style name="DefaultRadioGroup">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">
            @dimen/radio_group_default_horizontal_padding
        </item>
    </style>
</resources>